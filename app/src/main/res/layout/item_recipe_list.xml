<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.example.cookbookapp.entity.Recipe" />

        <variable
            name="vm"
            type="com.example.cookbookapp.viewmodel.RecipeListVM" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:onClick="@{() -> vm.onItemClicked(item)}">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.name}"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="61dp"
            tools:text="Meno receptu" />

        <TextView
            android:id="@+id/txt_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.score.toString()}"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="141dp"
            tools:text="Skore receptu" />

        <TextView
            android:id="@+id/txt_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.duration.toString()}"
            tools:layout_editor_absoluteX="134dp"
            tools:layout_editor_absoluteY="221dp"
            tools:text="Dobra pripravy receptu" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>